<% layout('layout/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit <%= campground.title %></h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds/<%= campground._id %>/?_method=put " method="POST">
      <div class="mb-3">
        <label for="title" class="form-label">Title:</label>
        <input type="text" class="form-control" id="title" name="campground[title]" value="<%= campground.title %> " />
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <div class="mb-3">
        <div class="form-label" for="location">Location:</div>
        <input class="form-control" type="text" id="location" name="campground[location]" value="<%= campground.location %> " />
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Image Url:</label>
        <input type="text" class="form-control" id="image" name="campground[image]" value="<%= campground.image %> " />
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Campground Price:</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input type="number" name="campground[price]" id="price" class="form-control" value="<%= campground.price %> " aria-label="price" aria-describedby="price label" placeholder="0.00" />
          <div class="valid-feedback">Looks Good!</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description:</label>
        <textarea name="campground[description]" id="description" class="form-control"><%= campground.description %> </textarea>
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Update</button>
      </div>
    </form>
    <div>
      <a href="/campgrounds/<%= campground._id %> ">Back to <%= campground.title %> </a>
    </div>
  </div>
</div>
